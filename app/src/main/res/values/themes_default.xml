	<style name="Theme.Tematika" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!--
		COLOR PRIMARY
		Toolbar - background
		(Material)Button - background
		DrawerLayout - selected menu item -> text color
		DrawerLayout - selected menu item -> background ima alpha ~0.5
		DrawerLayout - selected menu item -> icon tint
		MaterialDialog - positive/negative button text color
		Snackbar -> action button -> text color
		-->
		<item name="colorPrimary">@color/purple_500</item>

		<!--
		COLOR PRIMARY VARIANT
		Status Bar - background
		-->
		<item name="colorPrimaryVariant">@color/purple_700</item>

		<!--
		COLOR ON PRIMARY
		(Material)Button - text color
		-->
		<item name="colorOnPrimary">@color/white</item>



		<!--
		COLOR SECONDARY
		ExtendedFab - background color
		RadioButton - dot color
		EditText -> selected text highlight
		SeekBar - control color
		Switch(Material) - ON color
		CheckBox - ON color
		ToggleButton - ON underline color
		PreferenceScreen - category title - text color
		-->
		<item name="colorSecondary">@color/teal_200</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>

		<!--
		COLOR ON SECONDARY
		ExtendedFab - text color
		-->
		<item name="colorOnSecondary">@color/black</item>

